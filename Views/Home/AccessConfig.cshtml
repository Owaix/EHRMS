        Controller: "Home",
        feature: [{ id: 2, Name: "Owais" },
        { id: 3, Name: "Owais" },
        { id: 4, Name: "Owais" }]
    }

    var family = {
        Id: 1,
        ParentName: "John",
        Child:["dsad","cxzcc","erwr"]
        //Child: [{ Id: 1, ChildName: "William" },
        //{ Id: 2, ChildName: "Henry" },
        //{ Id: 3, ChildName: "vill" },
        //]
    }

    $.ajax({
        type: "GET",
        url: "/Home/MenuList",
        data: family,
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (data) {
            $('.table td input:checkbox').each(function (index, row) {
                var Feature = parseInt($(row).val().split("_")[0]);
                var Role = parseInt($(row).val().split("_")[1]);
                for (var i = 0; i < data.length; i++) {
                    if (data[i].Feature_Id == Feature && data[i].Role_Id == Role && data[i].IsCheck == true) {
                        $(this).attr("Checked", true);
                    }
                }
            });
        },
        error: function (request, status, error) {
            alert(request, status, error);
        }
    });
</script>
